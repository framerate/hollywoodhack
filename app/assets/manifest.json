{
  "manifest_version": 2,

  "name": "Trailer Rater",
  "description": "hollywood-hack.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "http://api.rottentomatoes.com/"
  ],
  "web_accessible_resources": [
    "jquery-2.0.3.min.map"
  ],
  "content_scripts": [
    {
      "matches": ["http://trailers.apple.com/*"],
      // "css": ["mystyles.css"],
      "js": [
      "jquery.js", 
      "contentscript.js"
      ]
    }
  ]
}