// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

html, body
    padding: 0
    margin: 0
h1
    margin-top: 0
    margin-bottom: 0
    width: 100%
    background-color: #d1d1d1
    text-align: center

p#welcome
    width: 100%
    text-align: center
    background-color: #333
    color: #d1d1d1
    margin-top: 0

#home-view
    width: 300px
    padding: 0

#facebook-connect
    display: none

#action-sub-view
    display: none

#content
    display: none

#poster
    float: left

#buttons
    float: right
#thumbsUp, #thumbsDown
    cursor: pointer

#friends
    clear: both

