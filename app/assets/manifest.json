{
  "manifest_version": 2,

  "name": "Trailer Rater",
  "description": "hollywood-hack.",
  "version": "0.1",
  "background": {
    "page":"background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "http://api.rottentomatoes.com/",
    "tabs",
    "http://*.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://trailers.apple.com/*"],
      // "css": ["mystyles.css"],
      "js": [
      "jquery.js", 
      "contentscript.js"
      ]
    }
  ]
}
